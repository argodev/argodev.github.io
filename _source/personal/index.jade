extends ../_layout

block content
  .container
    .page-header
      h1 Personal Blog
    .row
      .col-md-9
        //- .panel
          //-   .panel-body
        //- for each item in the data...
        each entry, slug in public.personal._data
          if slug != 'index'
            .row
              .col-md-12
                a(href='/personal/#{ slug }')
                  h3 #{ entry.title }
                p
                  i.glyphicon.glyphicon-time
                  |  Posted on #{ entry.date }
                p #{ entry.excerpt }
                a.btn.btn-default(href="/technology/#{ slug }")
                  | Continue Reading
                  = ' '
                  i.glyphicon.glyphicon-chevron-right
            hr
      .col-sm-3
        .panel.panel-default
          .panel-heading
            | Recent Posts
          .panel-body
            ul
              each entry, slug in public.personal._data
                if slug != 'index'
                  li
                    a(href='/personal/#{ slug }') #{ entry.title }

        .panel.panel-default
          .panel-heading
            | Older Posts
          .panel-body
            ul
              each val in [2014, 2013, 2012]
                li
                  a(href='/personal/' + val + '/') #{ val } Posts
